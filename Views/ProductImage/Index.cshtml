@model List<ProductImage>

@Html.ActionLink("Ürünlere Geri Dön","Index","Product")

<table>
    <tr>
        <th>Ürün Adı</th>
        <th>Resim Açıklaması</th>
        <th>Görsel</th>
        <th>Silindi mi</th>
        <th>Sil</th>
    </tr>
    <tr>
        @if (Model.Count > 0)
        {
            foreach (ProductImage item in Model)
            {
                <td> @item.Product.ProductName</td>
                <td> @item.Description</td>
                <td> <img src="~/Content/images/product/@item.ImagePath" alt="@item.Description" /></td>
                <td> @item.isDeleted</td>
                <td> @Html.ActionLink("Sil", "Delete", "ProductImage", new { id = item.ProductImageID }, null)</td>
            }
        }
    </tr>
</table>


@if (TempData["Message"] != null)
{
    @TempData["Message"]
}
