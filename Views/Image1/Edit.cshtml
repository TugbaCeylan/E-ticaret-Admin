        <h4>Image</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ImageID)

        <div class="form-group">
            @Html.LabelFor(model => model.ImagePath, new { @class = "control-label col-md-2" })
