@model List<Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



@Html.ActionLink("Yeni Ürün", "Insert", "Product")
<br /><br />

<table>
    <tr>
        <th>Ürün Adı</th>
        <th>Kategorisi</th>
        <th>Markası</th>
        <th>Birim Fiyat</th>
        <th>Stok Miktarı</th>
        <th>Sipariş Miktarı</th>
        <th>Yeniden Sipariş Noktası</th>
        <th>Oluşturulma Trarihi</th>
        <th>Açıklmama</th>
        <th>Silindimi</th>
        <th>Resimleri Gör</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (Product item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.UnitPrice</td>
            <td>@item.UnitsInStock</td>
            <td>@item.UnitsOnOrder</td>
            <td>@item.ReorderLevel</td>
            <td>@item.CreateDate</td>
            <td>@item.Description</td>
            <td>@item.isDeleted</td>
            <td>
                @Html.ActionLink("Resimleri Gör", "Index", "ProductImage", new { id = item.ProductID }, null)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", "Product", new { id = item.ProductID }, null)
            </td>
            <td>
                @Html.ActionLink("Sil", "Delete", "Product", new { id = item.ProductID }, null)
            </td>
        </tr>
    }
</table>

@if (TempData["Message"] != null)
    {
        @TempData["Message"]
    }
